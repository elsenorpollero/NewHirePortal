@page
@model NewHirePortalClean.Pages.EmployeeInformationModel
@{
    ViewData["Title"] = "Employee Information";
    Layout = null;
}

<!-- Include your custom styles -->
<link rel="stylesheet" href="~/css/splash.css" />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Information Form</title>
    <style>
        body {
            background: url('/images/47C0FD68-1884-4C3F-8CB4-91F7E953122C.jpeg') no-repeat center center fixed;
            background-size: cover;
        }

        .header {
            background-color: orange;
            border-radius: 10px;
            padding: 5px;
            position: fixed;
            top: 20px;
            left: 20px;
            width: 37%;
        }

        .footer {
            background-color: black;
            color: white;
            border-radius: 10px;
            padding: 10px;
            position: fixed;
            bottom: 20px;
            right: 20px;
        }

        .tile {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 30px;
            margin: 20px auto;
            border-radius: 15px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
            max-width: 800px;
            text-align: left;
        }

        .form-button {
            background-color: black;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
            display: inline-block;
        }

            .form-button:hover {
                background-color: darkgray;
            }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"], select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .toast {
            display: none;
            background-color: #28a745;
            color: white;
            padding: 10px;
            border-radius: 5px;
            position: fixed;
            top: 10px;
            right: 10px;
            z-index: 1000;
        }

            .toast.show {
                display: block;
            }
    </style>
</head>
<body>
    <header class="splash-header">
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/Admin">Admin Portal</a></li>
                <li><a href="https://www.SMCLR.com/privacy-policy">Privacy</a></li>
                <li><a href="https://www.smclr.com">Learn More</a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <div class="tile">
            <h1>@ViewData["Title"]</h1>
            <form method="post">
                <div class="form-group">
                    <label for="FirstName">First Name</label>
                    <input type="text" id="FirstName" name="EmployeeInfo.FirstName" class="form-control" value="@Model.EmployeeInfo.FirstName" />
                </div>

                <div class="form-group">
                    <label for="MiddleName">Middle Name</label>
                    <input type="text" id="MiddleName" name="EmployeeInfo.MiddleName" class="form-control" value="@Model.EmployeeInfo.MiddleName" />
                </div>

                <div class="form-group">
                    <label for="LastName">Last Name</label>
                    <input type="text" id="LastName" name="EmployeeInfo.LastName" class="form-control" value="@Model.EmployeeInfo.LastName" />
                </div>

                <!-- Button group for Save, Save and Continue, and Back -->
                <div class="form-group">
                    <!-- Save Button -->
                    <a href="javascript:void(0);" class="form-button" onclick="document.forms[0].submit();">Save</a>

                    <!-- Save and Continue Button -->
                    <a href="/Address" class="form-button" onclick="document.forms[0].submit();">Save and Continue</a>

                    <!-- Back Button -->
                    <a href="/Splash" class="form-button">Back</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="toast">
        Data saved successfully!
    </div>

    <footer class="splash-footer">
        <div class="footer-bar">
            <p>&copy; 2024 SMCLR, A Crane Co., a Series LLC. All rights reserved. <a href="https://www.SMCLR.com/privacy-policy">Privacy</a></p>
        </div>
    </footer>

    <script>
        // Display toast notification
        function showToast() {
            var toast = document.getElementById("toast");
            toast.classList.add("show");
            setTimeout(function () {
                toast.classList.remove("show");
            }, 3000);
        }

        // Check if temp data shows a save success
        @if (TempData["SaveSuccess"] != null)
        {
            <text>
                    showToast();
            </text>
        }
    </script>
</body>
</html>
