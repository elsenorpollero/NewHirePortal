@page
@model NewHirePortalClean.Pages.EmploymentHistoryModel
@{
    ViewData["Title"] = "Employment History";
}


<!-- Link to the splash.css stylesheet -->
<link rel="stylesheet" href="~/css/splash.css" />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Address Information</title>
    <style>
        body {
            background: url('/images/47C0FD68-1884-4C3F-8CB4-91F7E953122C.jpeg') no-repeat center center fixed;
            background-size: cover;
        }

        .header {
            background-color: orange;
            border-radius: 10px;
            padding: 5px;
            position: fixed;
            top: 20px;
            left: 20px;
            width: 37%;
        }

        .footer {
            background-color: black;
            color: white;
            border-radius: 10px;
            padding: 10px;
            position: fixed;
            bottom: 20px;
            right: 20px;
        }

        .tile {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 30px;
            margin: 20px auto;
            border-radius: 15px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
            max-width: 800px;
            text-align: left;
        }

            .tile:hover {
                box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.5);
            }

        .form-button {
            background-color: black;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            .form-button:hover {
                background-color: darkgray;
            }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"], select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Save form data in sessionStorage to maintain it during navigation
            const form = document.querySelector('form');
            const fields = form.querySelectorAll('input[type="text"], select');

            fields.forEach(field => {
                // Load saved value from sessionStorage
                const savedValue = sessionStorage.getItem(field.id);
                if (savedValue) {
                    field.value = savedValue;
                }

                // Save value to sessionStorage on change
                field.addEventListener('input', function () {
                    sessionStorage.setItem(field.id, field.value);
                });
                field.addEventListener('change', function () {
                    sessionStorage.setItem(field.id, field.value);
                });
            });

            // Handle form navigation buttons
            form.addEventListener('submit', function (event) {
                const formaction = event.submitter.getAttribute('value');
                if (formaction === '/NewHireForm') {
                    window.location.href = '/NewHireForm';
                } else if (formaction === '/NextPage') {
                    window.location.href = '/NextPage'; // Placeholder for the next page
                }
                event.preventDefault();
            });
        });
    </script>
</head>
<body>
    <!-- Custom Header with Navigation Links -->
    <header class="splash-header">
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/Admin">Admin Portal</a></li>
                <li><a href="https://www.SMCLR.com/privacy-policy">Privacy</a></li>
                <li><a href="https://www.smclr.com">Learn More</a></li>
            </ul>
        </nav>
    </header>

    <!-- Main Form Section -->
    <div class="container">
