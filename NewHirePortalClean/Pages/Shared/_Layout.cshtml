<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewHirePortalClean</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewHirePortalClean.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/NewHirePortalClean.styles.css" asp-append-version="true" />
    <style>
        /* Additional styles to enhance visual presentation */
        nav a {
            text-decoration: none;
            color: #007bff;
        }

            nav a:hover {
                color: #0056b3;
            }

        .navbar {
            margin-bottom: 20px;
        }

        .footer {
            padding: 15px 0;
            text-align: center;
            background-color: #f8f9fa;
        }

        .container.main-container {
            max-width: 1200px;
            padding-top: 20px;
        }
    </style>
</head>
<body>
    
    <div class="container main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

 

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>