@page "{id:int}"
@model NewHirePortalClean.Pages.EditApplicationModel
@{
    ViewData["Title"] = "Edit EmployeeApplication";
}

<h2>Edit Application</h2>

<form method="post">
    <div>
        <label for="employeeId">Employee ID</label>
        <input type="text" id="employeeId" name="Application.EmployeeId" value="@Model.Application.EmployeeId" />
    </div>

    <div>
        <label for="status">Status</label>
        <input type="text" id="status" name="Application.Status" value="@Model.Application.Status" />
    </div>

    <div>
        <label for="isComplete">Is Complete</label>
        <input type="checkbox" id="isComplete" name="Application.IsComplete" checked="@Model.Application.IsComplete" />
    </div>

    <button type="submit">Save Changes</button>
</form>
